<div class="container" style="margin-top: 50px">
    <div class="row">
        <p class="text-end">Bienvenido<a class="btn btn-danger" href="/admin/login/logout">Cerrar 
            sesion<i class="bi bi-box-arrow-right"></i></a></p>
    </div>

    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success" ><i class="bi bi-bookmark-plus">Nuevo</i></a>
        </div>
    </div>
</div>


<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>

                    <th scope="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class="bi bi-pencil" ></i></a>
                        <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i class="bi bi-trash3" ></i></a>
                    </td>
                </tr>

                {{/each}}

            </tbody>
        </table>
    </div>

</div>
